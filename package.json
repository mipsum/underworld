{
  "name": "loop",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "autoprefixer": "^6.7.6",
    "babel-core": "^6.23.1",
    "babel-eslint": "7.1.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.0",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015-node": "^6.1.1",
    "babel-preset-inferno-app": "^1.5.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-runtime": "^6.23.0",
    "case-sensitive-paths-webpack-plugin": "1.1.4",
    "chalk": "1.1.3",
    "connect-history-api-fallback": "1.3.0",
    "cross-spawn": "^5.1.0",
    "css-loader": "^0.26.4",
    "detect-port": "1.1.0",
    "dotenv": "4.0.0",
    "eslint": "^3.17.1",
    "eslint-config-inferno-app": "^0.6.1",
    "eslint-loader": "^1.6.3",
    "eslint-plugin-flowtype": "^2.30.3",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-inferno": "^6.10.2",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "filesize": "^3.5.6",
    "flow-bin": "^0.41.0",
    "fs-extra": "2.0.0",
    "gzip-size": "3.0.0",
    "html-webpack-plugin": "^2.28.0",
    "http-proxy-middleware": "^0.17.4",
    "inferno-dev-utils": "^0.7.0",
    "jest": "^19.0.2",
    "json-loader": "0.5.4",
    "node-sass": "^4.5.0",
    "object-assign": "4.1.1",
    "optimize-css-assets-webpack-plugin": "^1.3.0",
    "path-exists": "3.0.0",
    "pm2": "^2.4.2",
    "postcss-loader": "^1.3.3",
    "promise": "7.1.1",
    "recursive-readdir": "^2.1.1",
    "sass-loader": "^6.0.3",
    "strip-ansi": "3.0.1",
    "style-loader": "^0.13.2",
    "url-loader": "^0.5.8",
    "webpack": "^2.2.1",
    "webpack-bundle-analyzer": "^2.2.1",
    "webpack-dev-server": "^2.4.1",
    "webpack-manifest-plugin": "1.1.0",
    "webpack-md5-hash": "^0.0.5",
    "webpack-merge": "^4.0.0",
    "webpack-notifier": "^1.5.0",
    "webpack-visualizer-plugin": "^0.1.10",
    "whatwg-fetch": "^2.0.3"
  },
  "dependencies": {
    "flyd": "^0.2.4",
    "inferno": "^1.3.0-rc.10",
    "inferno-component": "^1.3.0-rc.10",
    "milligram": "^1.3.0",
    "normalize.css": "^5.0.0",
    "ramda": "0.19.1",
    "roboto-fontface": "^0.7.0"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js",
    "vm": "cd ./vm; sh run.sh",
    "nfsd-update": "sh vm/exports.sh",
    "flow": "flow",
    "server": "yarnpkg run build && pushstate-server build",
    "profile": "NODE_ENV=production webpack  --profile --json --config ./config/webpack.config.prod.js > stats.json"
  },
  "jest": {
    "verbose": true,
    "globals": {
      "__DEV__": true
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss|sass)$": "<rootDir>/__mocks__/styleMock.js",
      "^fw/(.*)$": "<rootDir>/src/framework/$1",
      "^fw$": "<rootDir>/src/framework"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/src/polyfills.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ]
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "loose": true,
          "modules": false
        }
      ],
      "inferno-app"
    ],
    "plugins": [
      "transform-flow-strip-types",
      "transform-export-extensions",
      [
        "transform-runtime",
        {
          "helpers": false,
          "polyfill": false,
          "regenerator": true,
          "moduleName": "babel-runtime"
        }
      ],
      [
        "transform-class-properties",
        {
          "spec": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "inferno-app"
    ],
    "globals": {
      "log": true,
      "__DEV__": true
    },
    "rules": {
      "no-unexpected-multiline": 2
    }
  }
}
